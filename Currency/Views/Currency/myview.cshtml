@{
    ViewData["Title"] = "myview";
}

<div class="wrapper">
    <h2 class="title">Currency conversion</h2>
    <form class="form" action="/currency/transfer" method="get">
        <div class="input-wrap">
            <label for="dollar">Dollar</label>
            <input type="text" name="dollar" id="dollar" />
        </div>

        <div class="input-wrap">
            <label for="rate">Rate</label>
            <input type="text" name="rate" id="rate" />
        </div>
        <input class="input-submit" type="submit" value="Exchange VND" />

    </form>

    <div class="input-wrap">

        <label for="vnd">Result</label>
        <input 
            readonly="readonly"
            type="text" 
            name="vnd" 
            value=@if (Model != null) @Model.vnd 0
        />
    </div>
</div>
